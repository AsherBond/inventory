<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\CatalogSearch\Model\Indexer\Fulltext\Action\DataProvider">
        <plugin name="stockedProductsFilterPlugin" disabled="true"/>
        <plugin name="stockedProductFilterByInventoryStockPlugin" type="Magento\InventoryElasticsearch\Plugin\CatalogSearch\Model\Indexer\Fulltext\Action\DataProvider\StockedProductFilterByInventoryStock"/>
    </type>
    <virtualType name="additionalFieldsProviderForElasticsearch" type="Magento\AdvancedSearch\Model\Adapter\DataMapper\AdditionalFieldsProvider">
        <arguments>
            <argument name="fieldsProviders" xsi:type="array">
                <item name="isOutOfStock" xsi:type="object">Magento\InventoryElasticsearch\Model\Adapter\BatchDataMapper\IsOutOfStockFieldsProvider</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="elasticsearch5FieldNameResolver" type="Magento\Elasticsearch\Model\Adapter\FieldMapper\Product\FieldProvider\FieldName\Resolver\CompositeResolver">
        <arguments>
            <argument name="items" xsi:type="array">
                <item name="isOutOfStock" xsi:type="object" sortOrder="150">Magento\InventoryElasticsearch\Model\Adapter\FieldMapper\Product\FieldProvider\FieldName\Resolver\IsOutOfStock</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Elasticsearch\Model\Adapter\FieldMapper\Product\FieldProvider\FieldName\Resolver\CompositeResolver">
        <arguments>
            <argument name="items" xsi:type="array">
                <item name="isOutOfStock" xsi:type="object">Magento\InventoryElasticsearch\Model\Adapter\FieldMapper\Product\FieldProvider\FieldName\Resolver\IsOutOfStock</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Elasticsearch\Model\Adapter\FieldMapper\Product\FieldProvider\DynamicField">
        <plugin name="dynamicFieldPlugin" type="Magento\InventoryElasticsearch\Plugin\Elasticsearch\Model\Adapter\FieldMapper\Product\FieldProvider\DynamicFieldPlugin"/>
    </type>
    <preference for="Magento\AdvancedSearch\Model\Adapter\DataMapper\AdditionalFieldsProviderInterface" type="Magento\InventoryElasticsearch\Model\Adapter\BatchDataMapper\IsOutOfStockFieldsProvider"/>
</config>

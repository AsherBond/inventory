<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="inventory_bulk_transfer_after">
        <observer instance="Magento\InventoryLowQuantityNotification\Observer\BulkTransferConfiguration"
                  name="magento_inventory_bulk_transfer_low_quantity_notification"/>
    </event>
    <event name="inventory_bulk_source_unassign_after">
        <observer instance="Magento\InventoryLowQuantityNotification\Observer\BulkUnassignConfiguration"
                  name="magento_inventory_bulk_unassign_low_quantity_notification"/>
    </event>
    <event name="inventory_bulk_source_assign_after">
        <observer instance="Magento\InventoryLowQuantityNotification\Observer\BulkAssignSourceConfiguration"
                  name="magento_inventory_bulk_assign_low_quantity_notification"/>
    </event>
</config>

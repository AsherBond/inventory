        <after>
            <actionGroup ref="logout" stepKey="logoutOfAdmin1"/>
        </after>

        <click selector="//div[@class='fieldset-wrapper-title']//span[contains(text(), 'Content')]" stepKey="click1"/>
        <waitForPageLoad stepKey="wait1"/>
        <fillField selector="#product_form_description" userInput="stuff stuff stuff" stepKey="fillDesc1"/>
        <seeInField selector="#product_form_description" userInput="stuff stuff stuff" stepKey="see1"/>
    </test>
</tests>

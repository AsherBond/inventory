    <test name="ExperimentTest">
        <annotations>
            <group value="skip"/>
        </annotations>

        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin1"/>
            <amOnPage url="/admin/catalog/product/new/set/4/type/configurable/" stepKey="amOnPage1"/>
            <waitForPageLoad stepKey="wait1"/>

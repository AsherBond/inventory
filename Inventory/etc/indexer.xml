<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Indexer/etc/indexer.xsd">
    <indexer id="inventory_stock" view_id="inventory_stock" class="Magento\Inventory\Indexer\Stock">
        <title translate="true">Stock</title>
        <description translate="true">Rebuild Stock index (MSI)</description>
    </indexer>
    <indexer id="inventory_stock_item" view_id="inventory_stock_item" class="Magento\Inventory\Indexer\StockItem">
        <title translate="true">Stock Item</title>
        <description translate="true">Rebuild Stock Item index (MSI)</description>
    </indexer>
    <indexer id="inventory_source" view_id="inventory_source" class="Magento\Inventory\Indexer\Source">
        <title translate="true">Source</title>
        <description translate="true">Rebuild Source index (MSI)</description>
        <dependencies>
            <indexer id="inventory_stock_item" />
        </dependencies>
    </indexer>
    <indexer id="inventory_source_item" view_id="inventory_source_item" class="Magento\Inventory\Indexer\SourceItem">
        <title translate="true">Source Item</title>
        <description translate="true">Rebuild Source Item index (MSI)</description>
        <dependencies>
            <indexer id="inventory_stock_item" />
            <indexer id="inventory_source" />
        </dependencies>
    </indexer>
</config>

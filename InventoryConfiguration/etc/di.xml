<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- IsSalableCondition -->
    <type name="Magento\Inventory\Model\ResourceModel\IsSalableCondition\GetStockConditionChain">
        <arguments>
            <argument name="getIsSalableConditions" xsi:type="array">
                <item name="manage_stock" xsi:type="object">Magento\InventoryConfiguration\Model\ResourceModel\IsSalableCondition\GetManageStockCondition</item>
                <!-- override source_item_status condition due to min_qty condition includes first (need to for proper work of chain) -->
                <item name="source_item_status" xsi:type="object">Magento\InventoryConfiguration\Model\ResourceModel\IsSalableCondition\GetMinQtyStockCondition</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\InventorySales\Model\IsProductSalable">
        <arguments>
            <argument name="conditions" xsi:type="array">
                <item name="back_order" xsi:type="array">
                    <item name="sort_order" xsi:type="number">20</item>
                    <item name="condition" xsi:type="object">Magento\InventoryCatalog\Model\IsBackOrderAvailable</item>
                </item>
                <item name="min_qty" xsi:type="array">
                    <item name="sort_order" xsi:type="number">40</item>
                    <item name="condition" xsi:type="object">Magento\InventoryConfiguration\Model\ConfigMinQty</item>
                </item>
                <item name="is_salable" xsi:type="array">
                    <item name="sort_order" xsi:type="number">30</item>
                    <item name="condition" xsi:type="object">Magento\InventoryConfiguration\Model\IsSalable</item>
                </item>
                <item name="is_manage_stock" xsi:type="array">
                    <item name="sort_order" xsi:type="number">10</item>
                    <item name="condition" xsi:type="object">Magento\InventoryConfiguration\Model\IsNotManageStock</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\InventoryRequestInterface" type="Magento\InventoryShipping\Model\InventoryRequest"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\ItemRequestInterface" type="Magento\InventoryShipping\Model\ItemRequest"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionAlgorithmInterface" type="Magento\InventoryShipping\Model\SourceSelectionAlgorithm"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\SourceSelectionAlgorithmProviderInterface" type="Magento\InventoryShipping\Model\SourceSelectionAlgorithmProvider"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionItemInterface" type="Magento\InventoryShipping\Model\SourceSelectionItem"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionResultInterface" type="Magento\InventoryShipping\Model\SourceSelectionResult"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\SourceSelectionServiceInterface" type="Magento\InventoryShipping\Model\SourceSelectionService"/>
    <type name="Magento\InventoryShipping\Model\SourceSelectionService">
        <arguments>
            <argument name="sourceSelectionMethods" xsi:type="array">
                <item name="priority" xsi:type="string">Magento\InventoryShipping\Model\PriorityBasedAlgorithm</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\InventoryShipping\Model\SourceSelectionAlgorithmProvider">
        <arguments>
            <argument name="availableAlgorithms" xsi:type="array">
                <item name="priority" xsi:type="array">
                    <item xsi:type="string" name="code">priority</item>
                    <item xsi:type="string" name="title">Algorithm which provides Source Selections based on predefined priority of Source</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Sales\Model\Order\ShipmentFactory">
        <plugin name="collect_sources_for_shipment_items" type="Magento\InventoryShipping\Plugin\Sales\CollectSourcesForShipmentItems"/>
    </type>
</config>

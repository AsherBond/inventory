<?php if ($_item = $block->getItem()): ?>
    <div>
        <span><?= $block->escapeHtml(__('Ordered')) ?></span>
        <span><?= /* @escapeNotVerified */ $_item->getQtyOrdered()*1 ?></span>
    </div>
    <?php if ((float) $_item->getQtyInvoiced()): ?>
        <div>
            <span><?= $block->escapeHtml(__('Invoiced')) ?></span>
            <span><?= /* @escapeNotVerified */ $_item->getQtyInvoiced()*1 ?></span>
        </div>
    <?php endif; ?>

    <?php if ((float) $_item->getQtyShipped()): ?>
        <div>
            <span><?= $block->escapeHtml(__('Shipped')) ?></span>
            <span><?= /* @escapeNotVerified */ $_item->getQtyShipped()*1 ?></span>
        </div>
    <?php endif; ?>

    <?php if ((float) $_item->getQtyRefunded()): ?>
        <div>
            <span><?= $block->escapeHtml(__('Refunded')) ?></span>
            <span><?= /* @escapeNotVerified */ $_item->getQtyRefunded()*1 ?></span>
        </div>
    <?php endif; ?>

    <?php if ((float) $_item->getQtyCanceled()): ?>
        <div>
            <span><?= $block->escapeHtml(__('Canceled')) ?></span>
            <span><?= /* @escapeNotVerified */ $_item->getQtyCanceled()*1 ?></span>
        </div>
    <?php endif; ?>
<?php endif; ?>

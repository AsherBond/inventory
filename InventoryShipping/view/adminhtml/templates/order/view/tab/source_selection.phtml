            <span class="title"><?= $block->escapeHtml($this->getSourceName($sourceCode)) ?></span>
        </div>
        <thead>
            <tr class="headings">
                <th><span><?= $block->escapeHtml(__('Sku')) ?></span></th>
                <th><span><?= $block->escapeHtml(__('Available Qty')) ?></span></th>
                <th><span><?= $block->escapeHtml(__('Qty to Deduct')) ?></span></th>
            </tr>
        </thead>

                <td><?= $block->escapeHtml($sourceItem->getSku()) ?></td>
                <td><?= $block->escapeHtml($sourceItem->getQtyAvailable()) ?></td>
                <td><?= $block->escapeHtml($sourceItem->getQty()) ?></td>
            </tr>
        <?php endforeach; ?>
    </table>
